# Shoghi Replicant Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Flask environment: development, production, testing
FLASK_ENV=production

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Port for Shoghi web server
SHOGHI_PORT=5000

# Secret key for session management (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=change-me-to-a-random-secret-key-in-production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite (default for development)
# DATABASE_URL=sqlite:////app/data/shoghi.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://shoghi:shoghi@postgres:5432/shoghi

POSTGRES_DB=shoghi
POSTGRES_USER=shoghi
POSTGRES_PASSWORD=shoghi
POSTGRES_PORT=5432

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis for community memory and caching
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379
REDIS_MAX_MEMORY=256mb

# ============================================================================
# API KEYS
# ============================================================================

# Hume.ai API Key (for voice interface with emotion detection)
# Get your key at: https://www.hume.ai/
HUME_API_KEY=

# OpenAI API Key (for GPT models)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ============================================================================
# AGENT ZERO CONFIGURATION
# ============================================================================

# Maximum number of concurrent agents
MAX_AGENTS=50

# Agent timeout in seconds (5 minutes default)
AGENT_TIMEOUT=300

# ============================================================================
# KALA SYSTEM CONFIGURATION
# ============================================================================

# KALA to USD reference rate (1 KALA â‰ˆ $1 USD by default)
KALA_USD_REFERENCE=1.0

# ============================================================================
# OPTIONAL DEBUG TOOLS
# ============================================================================

# Redis Commander (web UI for Redis)
REDIS_UI_PORT=8081

# pgAdmin (web UI for PostgreSQL)
PGADMIN_PORT=8082
PGADMIN_EMAIL=admin@shoghi.local
PGADMIN_PASSWORD=admin

# ============================================================================
# SECURITY NOTES
# ============================================================================

# 1. NEVER commit .env file to version control
# 2. Generate a strong SECRET_KEY in production:
#    python -c "import secrets; print(secrets.token_hex(32))"
# 3. Use strong passwords for PostgreSQL in production
# 4. Restrict API key permissions to minimum necessary
# 5. Consider using Docker secrets for sensitive values in production
