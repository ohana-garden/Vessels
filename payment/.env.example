# Vessels Payment Service Configuration

# Node Environment
NODE_ENV=production
PORT=3000

# TigerBeetle Configuration
TIGERBEETLE_CLUSTER_ID=0
TIGERBEETLE_REPLICA_ADDRESSES=tigerbeetle:3000

# PostgreSQL Database
DATABASE_URL=postgresql://vessels:password@postgres:5432/vessels_payment

# JWT Authentication
JWT_SECRET=change-this-in-production-to-a-long-random-secret

# Payment Providers
# ACH Provider (Modern Treasury)
ACH_PROVIDER=modern_treasury
MODERN_TREASURY_API_KEY=mt_live_xxx
MODERN_TREASURY_ORG_ID=org_xxx

# Card Processor (Marqeta)
CARD_PROCESSOR=marqeta
MARQETA_API_KEY=xxx
MARQETA_APP_TOKEN=xxx
MARQETA_PROGRAM_ID_GET=xxx
MARQETA_PROGRAM_ID_TAX=xxx

# RTP/FedNow Provider
RTP_PROVIDER=modern_treasury
RTP_API_URL=https://api.moderntreasury.com
RTP_API_KEY=mt_live_xxx
RTP_NETWORK=rtp

# Mojaloop Configuration
MOJALOOP_ENABLED=false
MOJALOOP_SWITCH_URL=https://mojaloop.hawaii.gov
MOJALOOP_PARTICIPANT_ID=vessels-dfsp
MOJALOOP_API_KEY=xxx
MOJALOOP_CALLBACK_URL=https://api.vessels.ohana/webhooks/mojaloop

# Hawaii Tax Online Integration
HTO_INTEGRATION_MODE=api
HTO_API_URL=https://hitax.hawaii.gov/api
HTO_CREDENTIAL_VAULT_URL=vault://credentials/hto

# Security
CORS_ORIGINS=https://vessels.ohana,https://admin.vessels.ohana
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
