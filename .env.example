# Vessels Platform - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# ============================================================================
# SECURITY
# ============================================================================
# CRITICAL: Change these in production!
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
SESSION_SECRET=CHANGE_THIS_ALSO

# CORS settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================================================
# DATABASE
# ============================================================================
VESSELS_DB_PATH=data/vessels.db
GRANTS_DB_PATH=data/grants.db
APPLICATIONS_DB_PATH=data/applications.db

# ============================================================================
# REDIS / FALKORDB
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# WEB SERVER
# ============================================================================
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
WORKERS=4

# ============================================================================
# PERFORMANCE
# ============================================================================
MAX_WORKERS=50
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300

# ============================================================================
# OBSERVABILITY
# ============================================================================
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=false  # Set true in production
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# AI/ML CONFIGURATION
# ============================================================================
# Model paths (optional)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
WHISPER_MODEL=base

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# Payment provider API keys
PAYMENT_API_KEY=
STRIPE_API_KEY=

# Nostr configuration (if using)
NOSTR_RELAY=wss://relay.damus.io
NOSTR_PRIVATE_KEY=

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================
# Set to true to enable development features
FLASK_DEBUG=true
RELOAD_ON_CHANGE=true
